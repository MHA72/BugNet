@page
@model BugNet.Pages.EditModel

<h1>Update Bug</h1>

<div class="row">
    <div class="col-6">
        <form method="post">
            <input asp-for="Bug!.Id" hidden="hidden"/>
            <input asp-for="Bug!.Name" class="form-control"/>
            <br/>
            <textarea asp-for="Bug!.Description" class="form-control"></textarea>
            <br/>
            <input asp-for="Bug!.IsDone" class="check mb-3"/> Is Done
            <br/>
            <button class="btn btn-primary">Save</button>
        </form>
    </div>
</div>