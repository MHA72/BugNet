@page
@model BugNet.Pages.Index

<h1>Welcome to Bugnet</h1>

<p>Undone items: @Model.UnDoneCount</p>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>IsDone</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var bug in Model.Bugs!)
        {
            <tr>
                <td>@bug.Id</td>
                <td>@bug.Name</td>  
                <td>@bug.Description</td>
                <td>@bug.IsDone</td>
                <td>
                    <a asp-page="./EditModel" asp-route-id="@bug.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>